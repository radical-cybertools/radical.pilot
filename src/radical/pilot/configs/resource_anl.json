
{
    "polaris": {
        "description"                 : "AMD EPYC Milan 7543P 32 core CPU with four Nvidia A100 GPUs, 560 nodes",
        "default_schema"              : "local",
        "schemas"                     : {
            "local"                   : {
                "job_manager_endpoint": "pbspro://localhost/",
                "filesystem_endpoint" : "file://localhost/"
            },
            "interactive"             : {
                "job_manager_endpoint": "fork://localhost/",
                "filesystem_endpoint" : "file://localhost/"
            }
        },
        "default_queue"               : "debug-scaling",
        "resource_manager"            : "PBSPRO",
        "agent_config"                : "default",
        "agent_scheduler"             : "CONTINUOUS",
        "agent_spawner"               : "POPEN",
        "launch_methods"              : {
                                         "order" : ["MPIEXEC"],
                                         "MPIEXEC": {}
                                        },
        "pre_bootstrap_0"             : [
                                         "module use /soft/modulefiles",
                                         "module load conda"
                                        ],
        "default_remote_workdir"      : "$HOME",
        "virtenv_mode"                : "local",
        "cores_per_node"              : 32,
        "gpus_per_node"               : 4,
        "system_architecture"         : {"smt"    : 2,
                                         "options": ["filesystems=grand:home", "place=scatter"]},
        "lfs_path_per_node"           : "/tmp",
        "lfs_size_per_node"           : 0
    },

    "aurora": {
        "description"                 : "HPE Cray-Ex based system, 10,624 nodes",
        "default_schema"              : "local",
        "schemas"                     : {
            "local"                   : {
                "job_manager_endpoint": "pbspro://localhost/",
                "filesystem_endpoint" : "file://localhost/"
            }
        },
        "default_queue"               : "EarlyAppAccess",
        "resource_manager"            : "PBSPRO",
        "agent_config"                : "default",
        "agent_scheduler"             : "CONTINUOUS",
        "agent_spawner"               : "POPEN",
        "launch_methods"              : {
                                         "order" : ["MPIEXEC"],
                                         "MPIEXEC": {}
                                        },
        "pre_bootstrap_0"             : [
                                         "module load cray-python"
                                        ],
        "default_remote_workdir"      : "$HOME",
        "virtenv_mode"                : "local",
        "cores_per_node"              : 104,
        "gpus_per_node"               : 6,
        "system_architecture"         : {"smt"    : 1,
                                         "options": ["filesystems=gecko:home", "place=scatter"]}
    }
}

