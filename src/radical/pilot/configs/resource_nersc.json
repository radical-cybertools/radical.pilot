
{
    "perlmutter": {
        "description"                 : "CPU nodes: 3072",
        "default_schema"              : "local",
        "schemas"                     : {
            "local"                   : {
                "job_manager_endpoint": "slurm://perlmutter-p1.nersc.gov/",
                "filesystem_endpoint" : "file://perlmutter-p1.nersc.gov/"
            },
            "batch"                   :
            {
                "job_manager_endpoint": "fork://localhost/",
                "filesystem_endpoint" : "file://localhost/"
            },
            "interactive"             : {
                "job_manager_endpoint": "fork://localhost/",
                "filesystem_endpoint" : "file://localhost/"
            }
        },
        "default_queue"               : "regular",
        "resource_manager"            : "SLURM",
        "agent_scheduler"             : "CONTINUOUS",
        "agent_spawner"               : "POPEN",
        "launch_methods"              : {
                                         "order": ["SRUN"],
                                         "SRUN" : {}
                                        },
        "pre_bootstrap_0"             : [
                                         "module load mongodb",
                                         "module load python"
                                        ],
        "default_remote_workdir"      : "$PSCRATCH",
        "virtenv_mode"                : "local",
        "cores_per_node"              : 128,
        "system_architecture"         : {
                                         "smt"     : 2,
                                         "options" : ["cpu"]
                                        }
    },

    "perlmutter_gpu": {
        "description"                 : "GPU nodes: 1536 with 40GiB and 256 with 80GiB of GPU-attached memory",
        "default_schema"              : "local",
        "schemas"                     : {
            "local"                   : {
                "job_manager_endpoint": "slurm://perlmutter-p1.nersc.gov/",
                "filesystem_endpoint" : "file://perlmutter-p1.nersc.gov/"
            },
            "batch"                   : {
                "job_manager_endpoint": "fork://localhost/",
                "filesystem_endpoint" : "file://localhost/"
            },
            "interactive"             : {
                "job_manager_endpoint": "fork://localhost/",
                "filesystem_endpoint" : "file://localhost/"
            }
        },
        "default_queue"               : "regular",
        "resource_manager"            : "SLURM",
        "agent_scheduler"             : "CONTINUOUS",
        "agent_spawner"               : "POPEN",
        "launch_methods"              : {
                                         "order" : ["SRUN"],
                                         "SRUN"  : {}
                                        },
        "pre_bootstrap_0"             : [
                                         "module load mongodb",
                                         "module load python"
                                        ],
        "default_remote_workdir"      : "$PSCRATCH",
        "virtenv_mode"                : "local",
        "cores_per_node"              : 64,
        "gpus_per_node"               : 4,
        "system_architecture"         : {
                                         "smt"     : 2,
                                         "options" : ["gpu"]
                                        }
    }
}

