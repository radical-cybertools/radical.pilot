{
    "lair":
    {
        "description"                 : "Luddy AI Research (LAIR) Cluster at Indiana University",
        "notes"                       : "LAIR resource name for CPU-only jobs in the general partition",
        "default_schema"              : "local",
        "schemas"                     : {
            "local"                   : {
                "job_manager_endpoint": "slurm://lair.luddy.indiana.edu/",
                "filesystem_endpoint" : "file://lair.luddy.indiana.edu/"
            },
            "ssh"                     : {
                "job_manager_endpoint": "slurm+ssh://lair.luddy.indiana.edu/",
                "filesystem_endpoint" : "sftp://lair.luddy.indiana.edu/"
            }
        },
        "default_queue"               : "general",
        "resource_manager"            : "SLURM",
        "agent_scheduler"             : "CONTINUOUS",
        "agent_spawner"               : "POPEN",
        "launch_methods"              : {
                                         "order": ["MPIRUN"],
                                         "MPIRUN" : {}
                                        },
        "pre_bootstrap_0"             : [],
        "default_remote_workdir"      : "/data/user/$USER",
        "system_architecture"         : {"exclusive": true},
        "cores_per_node"              : 64
    },

