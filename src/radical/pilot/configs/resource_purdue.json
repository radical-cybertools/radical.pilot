{
    "anvil":
    {
        "description"                 : "Heterogeneous Linux cluster located at Purdue university",
        "notes"                       : "",
        "default_schema"              : "local",
        "schemas"                     : {
            "local"                   : {
                "job_manager_endpoint": "slurm://anvil.purdue.edu/",
                "filesystem_endpoint" : "file://anvil.purdue.edu/"
            },
            "ssh"                     : {
                "job_manager_endpoint": "slurm+ssh://anvil.purdue.edu/",
                "filesystem_endpoint" : "sftp://anvil.purdue.edu/"
            },
            "interactive"             : {
                "job_manager_endpoint": "fork://localhost/",
                "filesystem_endpoint" : "file://localhost/"
            }
        },
        "default_queue"               : "wholenode",
        "resource_manager"            : "SLURM",
        "agent_scheduler"             : "CONTINUOUS",
        "agent_spawner"               : "POPEN",
        "launch_methods"              : {
                                         "order": ["SRUN", "MPIRUN"],
                                         "SRUN" : {},
                                         "MPIRUN": {
                                            "pre_exec_cached": [
                                                "module load intel/19.1.3.304"
                                                ]
                                            }
                                        },
        "pre_bootstrap_0"             :[""
                                        ],
        "default_remote_workdir"      : "/anvil/scratch/$USER",
        "python_dist"                 : "default",
        "virtenv_mode"                : "create",
        "rp_version"                  : "local",
        "system_architecture"         : {"exclusive": true}
    }
}